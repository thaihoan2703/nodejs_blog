<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card" style="width: 18rem; margin-top: 40px">
                <a href="courses/{{this.slug}}">
                    <img src={{this.thumbnail}} class="card-img-top" style="height: 12rem" alt={{this.name}}>
                </a>
                <div class="card-body" style=" ">
                    <a href="courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="courses/{{this.slug}}" class="btn btn-primary">Show more</a>
                </div>
            </div>  
        </div>
        {{/each}}

    </div>
</div>